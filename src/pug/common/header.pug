//Used variables
//- var is_authorized = true;
//- var has_notifications = true;
//- var is_homepage= false;

header.header(class = transparent_header === true ? 'transparent' : '')
    div.width-holder
        div.work-area.grid-12-sl.grid-4-t.grid-2-m
            div.logo
                if is_homepage
                    h1
                        img(src='../../img/logo-light.svg')
                else
                    a(href='./index.html', title='На главную')
                        img(src='../../img/logo-light.svg')

            button.top-menu-toggle.device-sl-hidden(type='button')
                i.zmdi.zmdi-menu
                i.zmdi.zmdi-close
            nav.top-menu.padding-area.grid-4-t
                div.top-menu-item.active
                    a(href='./activity-list.html') Найти развлечения
                div.top-menu-item
                    a(href='./blog-list.html') Блог
                if is_authorized
                    div.top-menu-item
                        a(href='./orders-list.html') Мои бронирования
                    div.top-menu-item
                        a(href='./favorites-list.html') Избранное
                    div.top-menu-item.last-child
                        button#toggle-notifications.icon(type='button', title='Уведомления')
                            i.zmdi.zmdi-notifications
                            if has_notifications
                                i.zmdi.zmdi-circle.attention-mark
                        div.avatar
                            a(href="./profile-edit-1-personal.html")
                                img(src="../../data/avatar1.jpg")
                        div.username
                            a(href="./profile-edit-1-personal.html") Иван Иванов
                else
                    div.top-menu-item
                        a.modal-control-open(data-target="login-register-modal", href='#') Войти
                    div.top-menu-item
                        button.modal-control-open(type='button', data-target="login-register-modal") Создать аккаунт
                if has_notifications
                    div.notifications#notifications
                        div.notifications-item
                            //div.notification-mark.message
                                i.zmdi.zmdi-info-outline
                            div.notification-date Сегодня в 13:45
                            div.notification-link
                                a(href='./activity-view.html') Комната с енотами
                            div.notification-message
                                | Представитель развлесения отправил вам
                                |
                                a(href='./activity-view.html') новое сообщение
                        div.notifications-item
                            div.notification-mark.rejected
                                i.zmdi.zmdi-close
                            div.notification-date Вчера в 16:32
                            div.notification-link
                                a(href='./activity-view.html') Прокатиться на карете
                            div.notification-message
                                | Представитель развлечения отменил ваше
                                |
                                a(href='./activity-view.html') бронирование №14568
                                |
                                | на 12.08.19.
                        div.notifications-item
                            div.notification-mark.accepted
                                i.zmdi.zmdi-check
                            div.notification-date 23.01.18 в 11:30
                            div.notification-link
                                a(href='./activity-view.html') Пострелять по звёздам
                            div.notification-message
                                | Представитель развлечения подтвердил ваше
                                |
                                a(href='./activity-view.html') бронирование №14568
                                |
                                | на 12.08.19.
if !is_homepage && !transparent_header
    div.header-height-holder