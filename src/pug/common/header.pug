header.header
    div.width-holder
        div.logo

            if is_homepage
                h1
                    img(src="../../img/logo.png")
            else
                a(href='./home.html', title="На главную")
                    img(src="../../img/logo.png")

        nav.top-menu

            if !is_homepage
                div.top-menu-item.active
                    a(href='./home.html') Главная

            div.top-menu-item
                a(href='./activity-list.html') Найти развлечения
            div.top-menu-item
                a(href='./blog-list.html') Блог

            if is_authorized
                div.top-menu-item
                    a(href='./orders-list.html') Мои бронирования
                div.top-menu-item
                    a(href='./favorites-list.html') Избранное
                div.top-menu-item
                    button(type='button') Уведомления

                    if has_notifications
                        div.dropdown
                            div.dropdown-item
                                a(href='#') Уведомление 1
                            div.dropdown-item
                                a(href='#') Уведомление 2
                            div.dropdown-item
                                a(href='#') Уведомление 3
                            div.dropdown-item
                                a(href='#') Уведомление 4

                div.top-menu-item
                    a(href='./profile-edit.html') Иван Иванов
            else
                div.top-menu-item
                    button(type='button') Войти
                div.top-menu-item
                    button(type='button') Зарегистрироваться
