extends ../layout/layout

append variables
    - var title = 'Найти развлечения — Igetup';
    - var description = 'Найти развлечения — Igetup';

append scripts
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBCMn3GeAkyi7CeXcq7PDkmlhz039LKnVw&callback=initMap", async, defer)

block content
    div.page-activity-list
        div.width-holder
            div.work-area.grid-12-dl
                div.columns
                    div.column.grid-12-dl-3.device-ms-hidden
                        div.form-box
                            include ../common/filters-form

                    div.column.grid-12-dl-9
                        div.map-box#map
                        div.work-area.grid-12-s.grid-4-t.grid-2-i
                            div.work-area.grid-2-m
                                div.combined-form.columns.separated-t
                                    div.combined-form-element.dropdown.width-dec-dl-5.column.grid-12-s-12.grid-12-s-single.grid-4-t-4.grid-4-t-single
                                        input(type='text', placeholder='Поиск по названию')
                                        div.dropdown-options
                                            div.dropdown-option Приключения
                                                div.prompt 9 развлечений
                                            div.dropdown-option Прокат гидроцкилов
                                                div.prompt 26 развлечений
                                            div.dropdown-option Прокат катеров без капитана
                                                div.prompt 11 развлечений
                                            div.dropdown-option Прокатиться на вейкборде
                                                div.prompt 1 развлечение
                                            div.dropdown-option Прогуляться по крышам
                                                div.prompt 2 развлечения
                                    div.combined-form-element.width-dec-dl-3.column.grid-12-s-6.grid-12-s-first.grid-4-t-2.grid-4-t-first
                                        div.combined-form-input.dropdown
                                            input(type="hidden")
                                            div.dropdown-value По цене (возрастание)
                                                i.zmdi.zmdi-caret-down
                                                i.zmdi.zmdi-caret-up
                                            div.dropdown-options
                                                div.dropdown-option.selected По цене (возрастание)
                                                div.dropdown-option По цене (убывание)
                                                div.dropdown-option По рейтингу (убывание)
                                                div.dropdown-option По рейтингу (возрастание)
                                    div.combined-form-element.device-dl-hidden.column.grid-12-s-6.grid-12-s-last.grid-4-t-2.grid-4-t-last
                                        button.button-secondary.modal-control-open(type='button', data-target="filters-modal") Фильтры
                                    div.combined-form-element.width-dec-dl-2.column.grid-12-s-12.grid-12-s-single.grid-4-t-4.grid-4-t-single
                                        button(type='button') Найти

                            div.mosaic.column-split
                                each activity, index in activities
                                    div.mosaic-element.grid-12-dl-3.grid-12-s-4.grid-4-t-2
                                        include ../common/activity-card.pug
