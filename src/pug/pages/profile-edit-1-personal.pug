extends ../layout/profile-edit

append variables
    - var title = 'Редактирование профиля: Основные данные — Igetup';
    - var description = 'Редактирование профиля: Основные данны — Igetup';
    - var active_point = 1;

block profile-section
    div.page-profile-register
        div.width-holder
            div.work-area.grid-12-sl.grid-4-t
                div.columns
                    div.column.grid-12-dl-2
                    div.column.grid-12-dl-8.grid-12-s-12
                        div.box
                            div.box-body
                                .box-title
                                    h1 Редактирование профиля
                                div.column-split
                                    div.column.grid-12-dl-2.grid-12-s-4.grid-4-t-4.grid-4-t-single
                                        div.profile-photo
                                            div.image-mask
                                                img(src="../../data/avatar1.jpg")
                                            div.change-photo
                                                button(type="button")
                                                    i.zmdi.zmdi-camera
                                    div.column.grid-12-dl-3.grid-12-s-4.grid-4-t-2.grid-4-t-first
                                        div.form-group
                                            label.form-label Имя и фамилия
                                            div.form-element
                                                input(type="text", placeholder="Петр Иванов")
                                        div.form-group
                                            label.form-label Email
                                            div.form-element
                                                input(type="email", placeholder="email@domain.com")
                                        div.form-group
                                            label.form-label Пол
                                            div.form-element
                                                div.dropdown
                                                    input(type="hidden")
                                                    div.dropdown-value Не указан
                                                        i.zmdi.zmdi-caret-down
                                                        i.zmdi.zmdi-caret-up
                                                    div.dropdown-options
                                                        div.dropdown-option.selected Не указан
                                                        div.dropdown-option Мужской
                                                        div.dropdown-option Женский
                                    div.column.grid-12-dl-3.grid-12-s-4.grid-4-t-2.grid-4-t-last
                                        div.form-group
                                            label.form-label Пароль
                                            div.form-element
                                                input(type="password")
                                        div.form-group
                                            label.form-label Повтор пароля
                                            div.form-element
                                                input(type="password")
                                        div.form-group
                                            label.form-label Дата рождения
                                            div.form-element
                                                input(type="text", placeholder="дд.мм.гггг")

                                div.one-button-line
                                    button.button.button-yellow(type="button") Зарегистрироваться

                                div.sub-text
                                    | Регистрируясь, вы соглашаетесь с нашими &nbsp;
                                    a(href="#",target="_blank") Правилами использования
                                    | &nbsp; и &nbsp;
                                    a(href="#",target="_blank") Политикой конфиденциальности

                    div.column.grid-12-dl-2