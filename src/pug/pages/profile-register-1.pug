extends ../layout/layout

append variables
    - var title = 'Регистрация — Igetup';
    - var description = 'Регистрация — Igetup';

block content
    div.page-profile-register
        div.width-holder
            div.work-area.grid-12-sl.grid-4-t.grid-2-m

                div.profile-menu
                    div.profile-menu-step
                        span 1. Основная информация
                    div.profile-menu-step
                        span 2. Подтверждение телефона
                    div.profile-menu-step
                        span 3. Подтверждение платежной карты

                div.columns
                    div.column.grid-12-sl-2
                    div.column.grid-12-sl-8
                        div.box

                            div.box-body
                                h2 Заполните основную информацию
                                div.column-split
                                    div.column.grid-12-sl-2.grid-4-t-4.grid-4-t-single
                                        | Photo
                                    div.column.grid-12-sl-3.grid-4-t-2.grid-4-t-first
                                        div.form-group
                                            label.form-label Имя и фамилия
                                            div.form-element
                                                input(type="text", placeholder="Петр Иванов")
                                        div.form-group
                                            label.form-label Email
                                            div.form-element
                                                input(type="email", placeholder="email@domain.com")
                                        div.form-group
                                            label.form-label Пол
                                            div.form-element
                                                div.dropdown
                                                    input(type="hidden")
                                                    div.dropdown-value Не указан
                                                        i.zmdi.zmdi-caret-down
                                                        i.zmdi.zmdi-caret-up
                                                    div.dropdown-options
                                                        div.dropdown-option.selected Не указан
                                                        div.dropdown-option Мужской
                                                        div.dropdown-option Женский
                                    div.column.grid-12-sl-3.grid-4-t-2.grid-4-t-last
                                        div.form-group
                                            label.form-label Пароль
                                            div.form-element
                                                input(type="password")
                                        div.form-group
                                            label.form-label Повтор пароля
                                            div.form-element
                                                input(type="password")
                                        div.form-group
                                            label.form-label Дата рождения
                                            div.form-element
                                                input(type="text", placeholder="дд.мм.гггг")

                                div.one-button-line
                                    button.button.button-yellow(type="button") Зарегистрироваться

                                div.sub-text
                                    | Регистрируясь, вы соглашаетесь с нашими
                                    a(href="#",target="_blank") Правилами использования
                                    | и
                                    a(href="#",target="_blank") Политикой конфиденциальности

                    div.column.grid-12-sl-2