                                                .tr
                                                    .td.cell-tariff
                                                        div.tariff
                                                            div.tariff-card
                                                                div.tariff-image
                                                                    img(src="")
                                                                div.tariff-info
                                                                    div.tariff-title 1 комната с 2 енотами + корм, вместе с инструктором по жизни
                                                                    div.tariff-options
                                                                        div.width-dec-ml-5
