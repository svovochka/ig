                                        div.form-group.column.grid-12-sl-3.grid-4-t-2
                                            label.form-label Количество участников
                                            div.form-element
                                                div.dropdown
                                                    input(type="hidden")
                                                    div.dropdown-value Любое количество
                                                        i.zmdi.zmdi-caret-down
                                                        i.zmdi.zmdi-caret-up
                                                    div.dropdown-options
                                                        div.dropdown-option.selected Любое количество
                                                        div.dropdown-option 1 чел.
                                                        div.dropdown-option от 2 до 5 чел.
                                                        div.dropdown-option от 5 до 10 чел.
                                                        div.dropdown-option более 10 чел.
                                    div.column-split
                                        div.form-group.column.grid-12-sl-3.grid-4-t-2
                                            div.form-element
                                                div.checkbox.checked
                                                    input(type="hidden")
                                                    label
                                                        span.checkbox-button
                                                            i.zmdi.zmdi-check
                                                        | Без предоплаты
                                        div.form-group.column.grid-12-sl-3.grid-4-t-2
                                            div.form-element
                                                div.checkbox
                                                    input(type="hidden")
                                                    label
                                                        span.checkbox-button
                                                            i.zmdi.zmdi-check
                                                        | Бесплатная отмена
                                div.results-count
                                    | Доступно &nbsp;
                                    strong 32 тарифа

                                div.tariffs
                                    .table.tariffs-table
                                        .thead
                                            .tr
                                                .th.th-tariffs Доступные тарифы
                                                .th.th-price.sort.sort-desc
                                                    | Цена
                                                    i.zmdi.zmdi-caret-down.caret.caret-desc
                                                    i.zmdi.zmdi-caret-up.caret.caret-asc
                                                .th.th-quantity Количество
                                        .tbody
                                            each val in [1, 2, 3]
                                                .tr
                                                    .td.cell-tariff
                                                        div.tariff
                                                            div.tariff-card
                                                                div.tariff-info
