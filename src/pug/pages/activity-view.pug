extends ../layout/layout

append variables
    - var title = 'Просмотр развлечения — Igetup';
    - var description = 'Просмотр развлечения — Igetup';
    - var transparent_header = true;
    - var is_authorized = false;

append scripts
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBCMn3GeAkyi7CeXcq7PDkmlhz039LKnVw&callback=initMap", async, defer)

block content
    div.page-activity-view
        section.activity-cover.contrast.contrast-light.image-container
            img.activity-cover-image.resizable(src="../../data/activity-cover.jpg")
            div.activity-cover-content
                div.header-height-holder
                div.width-holder
                    div.work-area.grid-12-sl.grid-4-t.grid-2-m
