                                                                    div.tariff-options
                                                                        div.width-dec-ml-5
                                                                            i.zmdi.zmdi-account-o
                                                                            | &nbsp; 1-2 человека
                                                                        div.width-dec-ml-5
                                                                            i.zmdi.zmdi-timer
                                                                            | &nbsp; 120 минут
                                                                    div.tariff-promo
                                                                        div.width-dec-ml-5
                                                                            div.badge.badge-small.no-prepayment-badge
                                                                                i.zmdi.zmdi-shield-check
                                                                                | &nbsp; Без предоплаты
                                                                        div.width-dec-ml-5
                                                                            div.badge.badge-small.free-cancel-badge
                                                                                i.zmdi.zmdi-rotate-left
                                                                                | &nbsp; Бесплатная отмена
                                                    .td.center.cell-price
                                                        .price 10 000 &#8381
