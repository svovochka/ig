extends ./base-modal.pug

block modal-variables
    - var modalId = 'complain-activity-modal';
    - var modalOpened= false;

block modal-body
    div.modal-title Жалоба на развлечение
    form
        div.form-section
            div.form-group
                div.form-element
                    textarea(placeholder="Расскажите, что не так...")
            div.form-button
                button.button.button-yellow.modal-control-commit(data-target=modalId) Отправить