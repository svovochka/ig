extends ./base-modal.pug

block modal-variables
    - var modalId = 'reset-password-modal';
    - var subclass = '';
    - var modalOpened= false;

block modal-body
    div.modal-title Востановление пароля
    div.modal-message Пожалуйста, установите новый пароль.
    form
        div.form-section
            div.form-group
                label.form-label Новый пароль
                div.form-element
                    input(type="password")
            div.form-group
                label.form-label Повтор пароля
                div.form-element
                    input(type="password")
    div.modal-buttons
        button.button.button-yellow.modal-control-commit( type='button') Отправить